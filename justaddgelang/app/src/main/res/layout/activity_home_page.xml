<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/tvAdminTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#7D3C98"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/btnManageProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Products"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#EFD6FD"
        android:padding="15dp"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btnManageCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Categories"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#EFD6FD"
        android:padding="15dp"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btnManageOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Orders"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#EFD6FD"
        android:padding="15dp"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#EFD6FD"
        android:padding="15dp"
        android:layout_marginBottom="15dp" />

</LinearLayout>
