<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Instruction -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the email linked to your account for sending OTP (One Time Password):"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Email Field -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#7D3C98"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Send OTP Button -->
    <Button
        android:id="@+id/btnSendOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send OTP"
        android:backgroundTint="#EFD6FD"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp" />

    <!-- OTP Message -->
    <TextView
        android:id="@+id/tvOtpMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="An OTP has been sent to your email."
        android:textSize="18sp"
        android:textColor="#7D3C98"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="20dp" />

    <!-- OTP Field -->
    <EditText
        android:id="@+id/etOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Enter OTP"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#7D3C98"
        android:visibility="gone"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Verify OTP Button -->
    <Button
        android:id="@+id/btnVerifyOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify OTP"
        android:backgroundTint="#EFD6FD"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

</LinearLayout>
