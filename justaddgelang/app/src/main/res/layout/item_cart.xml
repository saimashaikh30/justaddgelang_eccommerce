<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/cart_product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textColor="#7D3C98"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹0.00"
            android:textSize="14sp"
            android:textColor="#7D3C98" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_decrease"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:backgroundTint="#EFD6FD"
        android:src="@drawable/outline_check_indeterminate_small_24"
        android:contentDescription="Decrease"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/cart_quantity"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btn_increase"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#EFD6FD"
        android:src="@drawable/baseline_add_24"
        android:contentDescription="Increase"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete"
        android:padding="8dp"
        android:src="@android:drawable/ic_delete"
        android:tint="#D32F2F"
        tools:ignore="UseAppTint,TouchTargetSizeCheck" />
</LinearLayout>
